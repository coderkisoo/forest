<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.kisoo.forest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".constant.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.AdsActivity"
            android:theme="@style/transparent"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.TimeDownActivity" />
        <activity android:name=".ui.activity.ResultShowActivity" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.activity.MainActivity" />
        <activity android:name=".ui.activity.UserActivity" />
        <activity android:name=".ui.activity.UpdateNameActivity" />
        <activity android:name=".ui.activity.UpdatePasswordActivity" />
        <activity android:name=".ui.activity.UpdateSchoolNumActivity" />
        <activity android:name=".ui.activity.AwardActivity" />
        <activity android:name=".ui.activity.WhiteListActivity" />

        <service android:name=".service.UploadService" />


    </application>


</manifest>