<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/light_color"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="偏好设置"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="18dp"
        android:background="@color/progress_background" />

    <RelativeLayout
        android:id="@+id/rl_notify_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_ripple"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="任务完成时提醒我"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/stn_notify_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:theme="@style/SwitchTheme" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/progress_background" />

    <RelativeLayout
        android:id="@+id/rl_keep_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_ripple"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="保持屏幕开启"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/stn_keep_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:theme="@style/SwitchTheme" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/progress_background" />

    <RelativeLayout
        android:id="@+id/rl_white_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_ripple"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="应用程序白名单"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/stn_white_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:theme="@style/SwitchTheme" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/progress_background" />

    <RelativeLayout
        android:id="@+id/rl_sens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_color"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="进阶侦测"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/stn_sense_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:theme="@style/SwitchTheme" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/progress_background" />

    <RelativeLayout
        android:id="@+id/rl_destroy_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_ripple"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="关闭应用时结束任务"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <Switch
            android:id="@+id/stn_destroy_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:theme="@style/SwitchTheme" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/progress_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/light_color"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="更多功能"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/progress_background" />

    <TextView
        android:id="@+id/tv_recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/textview_ripple"
        android:paddingBottom="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="恢复默认设置"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/progress_background" />

    <TextView
        android:id="@+id/tv_upload_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/textview_ripple"
        android:paddingBottom="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="上传偏好设置"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/progress_background" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/textview_ripple"
        android:paddingBottom="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="18sp" />


</LinearLayout>