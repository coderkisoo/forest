<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp"
        app:cardBackgroundColor="@color/more_light_color"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:drawablePadding="7dp"
            android:text="2018年6月20日"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/iv_result"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:src="@mipmap/pic_center_success" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                android:drawableLeft="@mipmap/start_time"
                android:drawablePadding="7dp"
                android:text="起始时间：12:38"
                android:textColor="@color/more_light_color"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_time"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                android:drawableLeft="@mipmap/target"
                android:drawablePadding="7dp"
                android:text="目标时长：55分钟"
                android:textColor="@color/more_light_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_target"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                android:drawableLeft="@mipmap/time_length"
                android:drawablePadding="7dp"
                android:text="完成时长：55分钟"
                android:textColor="@color/more_light_color"
                android:textSize="12sp"
                android:textStyle="" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_success"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/target_success" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
