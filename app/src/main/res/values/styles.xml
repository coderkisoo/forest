<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/base_background</item>
        <item name="colorPrimaryDark">@color/base_background</item>
        <item name="colorAccent">@color/base_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/base_background</item>
    </style>

    <style name="transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/progress</item>
        <item name="android:colorForeground">@color/more_light_color</item>
    </style>


    <style name="WhiteBackgroundEditText" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="TextInputLayout" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <declare-styleable name="CircleWidget">
        <attr name="ring_radii" format="dimension" />
        <attr name="ring_width" format="dimension" />
        <attr name="pic_padding" format="dimension" />
        <attr name="bottom_color" format="color" />
        <attr name="top_color" format="color" />
        <attr name="min_progress" format="integer" />
        <attr name="touchable" format="boolean" />
        <attr name="min_top_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ImageViewWithCorner">
        <attr name="corner_width" format="dimension" />
        <attr name="corner_height" format="dimension" />
        <attr name="corner_margin_right" format="dimension" />
    </declare-styleable>


</resources>
